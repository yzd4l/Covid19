<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailCountry">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_margin="15dp"
     android:background="@drawable/backgroundn"
     android:orientation="vertical"
     app:layout_constraintVertical_weight="1">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="horizontal">

   <androidx.appcompat.widget.AppCompatImageView
       android:id="@+id/img_countryFlag"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="10dp"
       android:layout_weight="1"
       android:src="@mipmap/ic_launcher" />

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="10dp"
       android:layout_weight="1"
       app:cardCornerRadius="10dp"
       app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

     <TextView
         android:id="@+id/txt_countryName"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="Country Name"
         android:textColor="@color/colorPrimaryDark"
         android:textSize="20sp"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/latest_update"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Current Data :"
         android:textSize="18sp"
         android:textStyle="bold" />

    </LinearLayout>

   </androidx.cardview.widget.CardView>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="horizontal">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:orientation="vertical">

      <TextView
          android:id="@+id/txt_totalCurrentConfirmed"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="Total Confirmed"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="20sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/latest_totalCurrentConfirmed"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="Current Confirmed"
          android:textSize="18sp"
          android:textStyle="bold" />

     </LinearLayout>

    </androidx.cardview.widget.CardView>

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:orientation="vertical">

      <TextView
          android:id="@+id/txt_newConfirmed"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="New Confirmed"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="20sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/latest_newConfirmed"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="New Confirmed"
          android:textSize="18sp"
          android:textStyle="bold" />

     </LinearLayout>

    </androidx.cardview.widget.CardView>

   </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="horizontal">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:orientation="vertical">

      <TextView
          android:id="@+id/txt_totalCurrentDeaths"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="New Deaths"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="20sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/latest_totalCurrentDeaths"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="Current Deaths"
          android:textSize="18sp"
          android:textStyle="bold" />

     </LinearLayout>

    </androidx.cardview.widget.CardView>

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:orientation="vertical">

      <TextView
          android:id="@+id/txt_newDeaths"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="New Deaths"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="20sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/latest_newDeaths"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="New Deaths"
          android:textSize="18sp"
          android:textStyle="bold" />

     </LinearLayout>

    </androidx.cardview.widget.CardView>

   </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="horizontal">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:orientation="vertical">

      <TextView
          android:id="@+id/txt_totalCurrentRecovered"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="Current Recovered"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="20sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/latest_currentRecovered"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="Current Recovered"
          android:textSize="18sp"
          android:textStyle="bold" />

     </LinearLayout>

    </androidx.cardview.widget.CardView>

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:orientation="vertical">

      <TextView
          android:id="@+id/txt_newRecovered"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="New Recovered"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="20sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/latest_newRecovered"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="New Recovered"
          android:textSize="18sp"
          android:textStyle="bold" />

     </LinearLayout>

    </androidx.cardview.widget.CardView>

   </LinearLayout>

  </LinearLayout>

  <com.github.mikephil.charting.charts.BarChart
      android:id="@+id/barChart"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"/>

 </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>